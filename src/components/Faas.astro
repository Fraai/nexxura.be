---
import { Image } from 'astro:assets';
import faasImage from '../assets/faas.png';

import faas from '../data/faas.json';

type faasItem = {
    title: string;
    description: string;
}

type faasData = {
    title: string;
    description: string;
    data: faasItem[];
}

const faasContent: faasData = faas;
---
<div class="overflow-hidden  py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
            <div class="lg:ml-auto lg:pt-4 lg:pl-4">
                <div class="lg:max-w-lg">
                    <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">{faasContent.title}</p>
                    <p class="mt-6 text-lg/8 text-gray-600">{faasContent.description}</p>
                    <dl class="mt-10 max-w-xl space-y-8 text-base/7 text-gray-600 lg:max-w-none">
                        {faasContent.data.map((item: faasItem) => (
                                <div class="relative pl-9">
                                    <dt class="inline font-semibold text-gray-900">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute top-1 left-1 size-5 text-brand-600">
                                            <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
                                        </svg>
                                        {item.title}
                                    </dt>
                                    <dd class="inline">{item.description}</dd>
                                </div>
                        ))}
                    </dl>
                </div>
            </div>
            <div class="flex items-start justify-end lg:order-first">
                <Image
                        src={faasImage}
                        alt={faasContent.title}
                        class="w-3xl max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-228 md:-ml-4 lg:-ml-0"
                        width="2432"
                        height="1442"
                />
            </div>
        </div>
    </div>
</div>
