---
import usp from '../data/usp.json';

type uspItem = {
    title: string;
    description: string;
}

type uspData = {
    title: string;
    description: string;
    data: uspItem[];
}

const uspContent: uspData = usp;
---
<section class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">{uspContent.title}</h2>
            <p class="mt-6 text-lg/8 text-gray-600">{uspContent.description}</p>
        </div>
        <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {uspContent.data.map((item: UspItem) => (
                    <div>
                        <dt class="font-semibold text-gray-900">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-4 inline-block mr-1 text-brand-800"
                                 aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M5.25 8.25h15m-16.5 7.5h15m-1.8-13.5-3.9 19.5m-2.1-19.5-3.9 19.5"/>
                            </svg>
                            {item.title}
                        </dt>
                        <dd class="mt-1 text-gray-600">{item.description}</dd>
                    </div>
            ))}
        </dl>
    </div>
</section>