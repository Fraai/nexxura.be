---
import { useTranslations } from '../i18n/utils';
import { languages } from '../i18n/config';

const {lang, page} = Astro.params;
const {contentKey} = Astro.props;
const t = useTranslations(lang as keyof typeof languages);
---
<section class="pt-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-4xl lg:mx-0">
            <h1 class="text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl underline">{t(`page.${contentKey}.title`)}</h1>
        </div>
    </div>
</section>